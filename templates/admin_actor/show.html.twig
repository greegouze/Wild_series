{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
             <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }}" width="200" height="300" class="cover"></td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ actor.updatedAt ? actor.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_actor_index') }}">back to list</a>

    <a href="{{ path('app_admin_actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('admin_actor/_delete_form.html.twig') }}
{% endblock %}
